package com.elcom.catalog.dataservice.service.impl;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.elcom.catalog.dataservice.repository.ItemAssetRepository;
import com.elcom.catalog.dataservice.root.ItemAsset;
import com.elcom.catalog.dataservice.service.ItemAssetService;
@Service
public class ItemAssetServiceImpl implements ItemAssetService {
	
	@Autowired
	ItemAssetRepository itemAssetRepository;

	@Override
	public Optional<ItemAsset> getItemAsset(ItemAsset itemAsset) {
		return null;
	}

	@Override
	public Optional<ItemAsset> getItemAssetById(Long id) {
		return itemAssetRepository.findById(id);
	}

	@Override
	public void saveItemAsset(ItemAsset itemAsset) {
		itemAssetRepository.saveAndFlush(itemAsset);
	}

	@Override
	public void deleteItemAsset(Long id) {
		itemAssetRepository.deleteById(id);	
	}

	@Override
	public List<ItemAsset> getAllItemAssets() {
		return itemAssetRepository.findAll();
	}


}
