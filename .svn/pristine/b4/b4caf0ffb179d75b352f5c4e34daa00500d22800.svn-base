package com.elcom.catalog.dataservice.service.impl;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.elcom.catalog.dataservice.repository.SICCodesLookupRepository;
import com.elcom.catalog.dataservice.root.SICCodesLookup;
import com.elcom.catalog.dataservice.service.SICCodesLookupService;

/**
 * @author elcdev002
 *
 * Date: Jul 23, 2019 1:10:21 PM
 * 
 */
@Service
public class SICCodesLookupServiceImpl implements SICCodesLookupService {

	@Autowired
	private SICCodesLookupRepository sicLookupRepository;

	@Override
	public Iterable<SICCodesLookup> getAllSICCodesLookups() {
		return sicLookupRepository.findAll();
	}

	@Override
	public SICCodesLookup saveSICCodesLookup(SICCodesLookup sicLookup) {
		return sicLookupRepository.saveAndFlush(sicLookup);
	}

	@Override
	public List<SICCodesLookup> getAllSICCodesLookupsList() {
		List<SICCodesLookup> sicLookupList = new ArrayList<>();		
		sicLookupRepository.findAll().forEach(sicLookupList :: add);
		return sicLookupList;
	}

	@Override
	public SICCodesLookup getSICCodesLookupByName(String SICCodesLookupNme) {
		List<SICCodesLookup> types = getAllSICCodesLookupsList();
		
		SICCodesLookup sicType = types.stream()
				  .filter(sicLookup -> SICCodesLookupNme.equals(sicLookup.getSicCode()))
				  .findAny()
				  .orElse(null);
		return sicType;
	}
}